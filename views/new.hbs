<div class="flex-column" id="root">
    {{# if errors }}
        <section class="errors">
            <ul>
                {{# each errors }}
                    <li>{{ this.msg }}</li>
                {{/each}}
            </ul>
        </section>
    {{/if}}
    <form action="/new" method="post" autocomplete="off">
        <input class="future-color future-secondary-font future-box" type="text" placeholder="Enter Name"
               maxlength="12" name='name' required />
        <div class="setting-container">
            <div class="setting-item">
                <h3 class="future-color future-secondary-font">Guinevere:</h3>
                <label class="switch">
                    <input type="checkbox" name="guinevere" checked />
                    <span class="slider"></span>
                </label>
            </div>
            <div class="setting-item">
                <h3 class="future-color future-secondary-font">Puck:</h3>
                <label class="switch">
                    <input type="checkbox" name="puck" checked />
                    <span class="slider"></span>
                </label>
            </div>
            <div class="setting-item">
                <h3 class="future-color future-secondary-font">Sir Robin:</h3>
                <label class="switch">
                    <input type="checkbox" name="robin" checked />
                    <span class="slider"></span>
                </label>
            </div>
            <div class="setting-item">
                <h3 class="future-color future-secondary-font">Jester:</h3>
                <label class="switch">
                    <input type="checkbox" name="jester" checked />
                    <span class="slider"></span>
                </label>
            </div>
            <div class="setting-item">
                <h3 class="future-color future-secondary-font">Leon:</h3>
                <label class="switch">
                    <input type="checkbox" name="leon" checked />
                    <span class="slider"></span>
                </label>
            </div>
            <div class="setting-item">
                <h3 class="future-color future-secondary-font">Galahad:</h3>
                <label class="switch">
                    <input type="checkbox" name="galahad" checked />
                    <span class="slider"></span>
                </label>
            </div>
            <div class="setting-item">
                <h3 class="future-color future-secondary-font">Lucius:</h3>
                <label class="switch">
                    <input type="checkbox" name="lucius" checked />
                    <span class="slider"></span>
                </label>
            </div>
            <div class="setting-item">
                <label class="future-color future-secondary-font" for="assassin">Assassin:</label>
                <select id="assassin" name="assassin">
                    <option value="Enabled">Enabled</option>
                    <option value="Random">Random</option>
                    <option value="Disabled">Disabled</option>
                </select>
            </div>
        </div>
        <input class="future-color future-disabled future-secondary-font future-box" type="submit"
               value="Create Game" id="create-game-button" disabled />
    </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/javascripts/new.js"></script>
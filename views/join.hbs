<div class="flex-column" id="root">
    {{# if errors }}
        <section class="errors">
            <ul>
                {{# each errors }}
                    <li>{{ this.msg }}</li>
                {{/each}}
            </ul>
        </section>
    {{/if}}
    <form action="/game" method="get" autocomplete="off">
        <input class="future-color future-secondary-font future-box" type="text" placeholder="Enter Game Code"
               oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
               maxlength="4" name="code" required />
        <input class="future-color future-secondary-font future-box" type="text" placeholder="Enter Name"
               maxlength="12" name="name" required />
        <input class="future-color future-disabled future-secondary-font future-box" type="submit"
               value="Join Game" id="join-game-button" disabled />
    </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/javascripts/join.js"></script>

<div class="flex-column" id="root">
    {{# if errors }}
        <section class="errors">
            <ul>
                {{# each errors }}
                    <li>{{ this.msg }}</li>
                {{/each}}
            </ul>
        </section>
    {{/if}}
    <form action="/game" method="get" autocomplete="off">
        <input class="future-color future-secondary-font future-box" type="text", placeholder="Enter Game Code", maxlength="4", name="code",
               oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);",
               required />
        <input class="future-color future-secondary-font future-box" type="text", placeholder="Enter Name", name="name", required />
        <input class="future-color future-secondary-font future-box" type="submit", value="Join Game" />
    </form>
</div>
